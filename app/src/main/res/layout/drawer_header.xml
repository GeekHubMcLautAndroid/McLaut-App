<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:gravity="bottom">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/header_logo_height"
        android:layout_margin="@dimen/header_logo_margin"
        android:src ="@drawable/logomclaut" />
    <TextView
        android:id="@+id/tv_header_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/header_tv_margin"
        android:textColor="@android:color/white"
        android:textSize="@dimen/header_user_name_tv_font_size"
        android:text="User name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">
        <TextView
            android:id="@+id/tv_header_user_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:textSize="@dimen/header_user_id_tv_font_size"
            android:text="user id"
            android:layout_weight="3"/>
        <ImageButton
            android:id="@+id/bt_select_user"
            android:tag="@string/enable_user_list"
            android:src="@drawable/account"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="selectDrawerLayoutButtonClick">
        </ImageButton>
    </LinearLayout>

</LinearLayout>